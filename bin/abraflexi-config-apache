#!/bin/bash

args=("$@")
if [ $# == 0 ] ;
then
    CONFFILE=/etc/abraflexi/client.json
else
    CONFFILE=${args[0]}
fi

if [ -f "$CONFFILE" ]; then
    echo "<IfModule mod_env.c>"
    for KEY in $(jq -r 'keys[]' ${CONFFILE})
    do
        echo ${KEY}="`jq -r '.'$KEY ${CONFFILE}`"
    done
    echo "</IfModule>"
else 
    echo "$CONFFILE does not exist. Please specify another one"  1>&2;
fi



