{
    "$schema": "https://raw.githubusercontent.com/VitexSoftware/php-vitexsoftware-multiflexi-core/refs/heads/main/multiflexi.app.schema.json",
    "schemaVersion": "3.1.0",
    "uuid": "35478b99-c65f-4cdd-9ee1-744c55d9ac03",
    "name": {
        "en": "AbraFlexi Checker",
        "cs": "Kontrola AbraFlexi"
    },
    "description": {
        "en": "Check AbraFlexi availbility",
        "cs": "Kontrola dostupnosti AbraFlexi"
    },
    "tags": [
        "AbraFlexi",
        "FlexiBee",
        "Config",
        "Checker"
    ],
    "homepage": "https://github.com/VitexSoftware/php-abraflexi-config",
    "image": "",
    "executable": "/usr/bin/abraflexi-client-config-checker",
    "environment": {
        "APP_DEBUG": {
            "type": "bool",
            "description": {
                "en": "Show debug messages",
                "cs": "Zobrazit ladicí zprávy"
            },
            "defval": "False",
            "required": true,
            "category": "Behavior"
        },
        "RESULT_FILE": {
            "type": "string",
            "description": {
                "en": "write output json data to",
                "cs": "zapsat výstupní json data do"
            },
            "defval": "reminder_{ABRAFLEXI_COMPANY}.json",
            "required": false,
            "category": "Other"
        },
        "EASE_LOGGER": {
            "type": "string",
            "description": {
                "en": "write log messages using",
                "cs": "zapisovat log zprávy pomocí"
            },
            "defval": "console|syslog",
            "required": false,
            "category": "Behavior"
        },
        "ABRAFLEXI_COMPANY": {
            "type": "string",
            "description": "",
            "defval": "demo_de",
            "category": "API"
        },
        "ABRAFLEXI_LOGIN": {
            "type": "string",
            "description": {
                "en": "AbraFlexi Login",
                "cs": "AbraFlexi Přihlašovací jméno"
            },
            "defval": "winstrom",
            "category": "API"
        },
        "ABRAFLEXI_PASSWORD": {
            "type": "password",
            "description": {
                "en": "AbraFlexi password",
                "cs": "AbraFlexi Heslo"
            },
            "defval": "winstrom",
            "category": "API"
        },
        "ABRAFLEXI_URL": {
            "type": "string",
            "description": {
                "en": "AbraFlexi Server URI",
                "cs": "AbraFlexi Server URI"
            },
            "defval": "https://demo.flexibee.eu:5434",
            "category": "API"

        }
    },
"exitCodes": {
        "0": {
            "description": {
                "en": "Success",
                "cs": "Úspěch"
            },
            "severity": "success",
            "retry": false
        },
        "1": {
            "description": {
                "en": "General error",
                "cs": "Obecná chyba"
            },
            "severity": "error",
            "retry": true
        }
    }
}
