#!/bin/sh
# postinst script for php-abraflexi-config

#export DH_VERBOSE=1

CONFIGFILE=/etc/abraflexi/client.json
set -e
. /usr/share/debconf/confmodule

composer --no-plugins --no-scripts --no-dev -o install -d /usr/share/php-abraflexi-config

if [ "$1" = "configure" ]; then

    db_get php-abraflexi-config/ABRAFLEXI_URL
    abraflexi-client-config ABRAFLEXI_URL $RET
    db_get php-abraflexi-config/ABRAFLEXI_LOGIN
    abraflexi-client-config ABRAFLEXI_LOGIN $RET
    db_get php-abraflexi-config/ABRAFLEXI_PASSWORD
    abraflexi-client-config ABRAFLEXI_PASSWORD $RET
    db_get php-abraflexi-config/ABRAFLEXI_COMPANY
    abraflexi-client-config ABRAFLEXI_COMPANY $RET
fi


abraflexi-config-export > /etc/profile.d/abraflexi-client.sh

abraflexi-client-config-checker

#DEBHELPER#

exit 0
